{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "kala/testimonial-block",
	"version": "0.1.0",
	"title": "Kala Testimonial Block",
	"category": "widgets",
	"icon": "star-half",
	"description": "Display a testimonial with structured data.",
	"example": {},
	"supports": {
		"html": false,
        "background": {
            "backgroundImage": true,
            "backgroundSize": true
        }
	},
	"textdomain": "kala",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
    "attributes": {
        "testimonial": {
            "type": "string",
            "default": "This is a testimonial."
        },
        "author": {
            "type": "string",
            "default": "Anonymous"
        },
        "rating": {
            "type": "number",
            "default": 5
        }
    }
}
